<div class="container">

  <%= form_for @user, :url => url_for(controller: "sessions", action: "create"), :html => {class: "form-signin"} do |t| %>
    <div class="form-group">
      <%= t.label :email, "E-Mail" %><br>
      <%= t.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= t.label :password, "Enter Your Password" %><br>
        <%= t.password_field :password, class: "form-control" %>
    </div>

    <div class="actions">
      <%= t.submit "Log In", class: "btn btn-primary" %>
    </div>

    <%= link_to 'Log in using Google', '/auth/google_oauth2', method: :post, class: "btn btn-secondary" %>
    
  <% end  %>

</div>